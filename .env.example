# Environment
ENVIRONMENT=development
DEBUG=true
RUN_MODE=single

# Monitoring
MONITORING_INTERVAL=3600
COMPLIANCE_THRESHOLD=85.0

# Azure Services (mocked locally)
AZURE_STORAGE_CONNECTION_STRING=mock://localhost
AZURE_SERVICE_BUS_CONNECTION_STRING=mock://localhost
AZURE_COGNITIVE_SERVICES_KEY=mock-key
AZURE_COGNITIVE_SERVICES_ENDPOINT=mock://localhost

# Database
DATABASE_URL=sqlite:///./data/compliance.db

# API
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# Agent Configuration
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT=300

# Memory Configuration
MEMORY_RETENTION_DAYS=30
CACHE_TTL=3600

# OpenAI (optional - uses mock if not provided)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4